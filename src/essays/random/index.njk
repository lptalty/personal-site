<ul class="essays-list">
  {%- for essay in collections.essays | reverse -%}
  {%- if "/random/" in essay.url and essay.url !== "/essays/random/" -%}
  <li>
    <a href="{{ essay.url }}">
      <span class="essay-title">{{ essay.data.title }}</span>
      <span class="essay-date">{{ essay.date | dateFormat("short") }}</span>
